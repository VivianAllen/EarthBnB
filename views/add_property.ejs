<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <link rel="stylesheet" href="/spectre.min.css">
    <link rel="stylesheet" href="/spectre-exp.min.css">
    <link rel="stylesheet" href="/spectre-icons.min.css">

    <title>EarthBnB - Properties</title>
  </head>
  <body>

  <div class="container" style="padding-top:5px">
    <div class="columns">
      <div class="column col-12">
        <header class="navbar">
          <section class="navbar-section">
            <a href="#" class="navbar-brand mr-2">EarthBnB</a>
          </section>
          <section class="navbar-section">
            <% if (username) { %>
              <a href="/user" class="btn btn-link">Welcome, <%= username %>!</a>
              <a href="/logout" class="btn btn-link">Logout</a>
            <% } else { %>
              <a href="/login" class="btn btn-link">Login</a>
              <a href="/signup" class="btn btn-link">Sign Up</a>
            <% } %>
          </section>
        </header>
      </div>
    </div>

    <div class="columns">
      <% results.forEach(function(property) { %>
        <div class="column col-4 centered"  style="padding-top:15px">
          <div class="card">
            <div class="card-image">
              <img src=<%= property.imgsrc %> class="img-responsive">
            </div>
            <div class="card-header">
              <div class="card-title h4"><%= property.title %></div>
              <div class="card-subtitle text-gray"><%= property.username %></div>
            </div>
            <div class="card-body">
              <%= property.description %>
            </div>
            <div class="card-footer">
              <button class="btn btn-primary">Book</button>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  </body>
</html>


